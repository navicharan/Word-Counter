{
  "manifest_version": 3,
  "name": "Word Counter",
  "version": "1.0",
  "description": "Counts the number of words in the selected text.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
      // "48": "icon48.png",
      // "128": "icon128.png"
    }
  }
}
